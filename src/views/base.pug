doctype html 
html(lang="ko")
  head 
    title #{pageTitle} | Wetube
    link(rel="stylesheet" href="https://unpkg.com/mvp.css")
  body
    header
      nav
        ul
          li
            a(href="/") Home
          if loggedIn
            li
              a(href="/logout") logout
            li
              a(href="/my-profile") #{loggedInUser.name} 의 프로필
          else
            li
              a(href="/join") join
            li
              a(href="/login") login
          li
            a(href="/videos/upload") Upload
          li
            a(href="/search") search
      h1=pageTitle
    main
      block content
  include partials/footer