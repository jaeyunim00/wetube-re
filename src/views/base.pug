doctype html 
html(lang="ko")
  head 
    title #{pageTitle} | Wetube
    link(rel="stylesheet" href="https://unpkg.com/mvp.css")
  body
    header
      nav
        ul
          li
            a(href="/") Wetube
          if loggedIn
            li
              a(href="/users/logout") 로그아웃
            li
              a(href="/users/edit") #{loggedInUser.username} 의 프로필
            li
              a(href="/videos/upload") 업로드
          else
            li
              a(href="/join") 회원가입
            li
              a(href="/login") 로그인
          li
            a(href="/search") 검색
      h1=pageTitle
    main
      block content
  include partials/footer