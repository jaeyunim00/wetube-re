extends base.pug

block content
  form(method="POST", enctype="multipart/form-data")
    label(for="video") Video
    input(type="file", accept="video/*", required, id="video", name="video")
    input(type="text", name="title", placeholder="title", required=true)
    input(type="text", name="description", placeholder="description", required=true)
    input(type="text", name="hashtags", placeholder="hashtags", required=true)
    input(type="submit", value="upload video") 