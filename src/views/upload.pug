extends base

block content
  div.profile-edit.profile-edit-video
    form(method="POST", enctype="multipart/form-data")
      .upload_video
        label(for="video" class="custom-file-upload") 비디오 업로드
        input(type="file", accept="video/*", required, id="video", name="video")
      input(type="text", name="title", placeholder="제목", required)
      input(type="text", name="description", placeholder="내용", required)
      input(type="text", name="hashtags", placeholder="해시태그(, 로 구별)", required)
      input(type="submit", value="게시하기")