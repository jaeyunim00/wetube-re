extends base.pug

block content
  div.video-edit
    h4 Change Title of Video
    form(method="POST")
      input(name="title", placeholder="Video Title", value=video.title, required)
      input(type="text", name="description", placeholder="Description", value=video.description, required)
      input(type="text", name="hashtags", placeholder="Hashtags", required, value=video.hashtags.join())
      input(value="Save", type="submit")