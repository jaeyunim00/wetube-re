extend base.pug

block content
  if errorMessage 
    span=errorMessage
  form(method="POST")
    input(placeholder="name", type="text", required, name = "name", value=loggedInUser.name)
    input(placeholder="email", type="text", required, name = "email", value=loggedInUser.email)
    input(placeholder="username", type="text", required, name = "username", value=loggedInUser.username)
    input(placeholder="location", name="location", type="text", required, value=loggedInUser.location)
    input(type="submit", value="수정하기")
    if !loggedInUser.socialOnly 
      hr
      a(href="change-password") 비밀번호 변경 &rarr;

  